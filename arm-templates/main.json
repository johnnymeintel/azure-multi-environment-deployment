{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "allowedValues": ["dev", "test", "prod"],
      "metadata": { "description": "Deployment environment" }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "networkDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/YourUsername/YourRepo/main/network.json",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "[concat('https://raw.githubusercontent.com/YourUsername/YourRepo/main/network.parameters.', parameters('environment'), '.json')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "storageDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/YourUsername/YourRepo/main/storage.json",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "[concat('https://raw.githubusercontent.com/YourUsername/YourRepo/main/storage.parameters.', parameters('environment'), '.json')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "databaseDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/YourUsername/YourRepo/main/database.json",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "[concat('https://raw.githubusercontent.com/YourUsername/YourRepo/main/database.parameters.', parameters('environment'), '.json')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "appServiceDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/YourUsername/YourRepo/main/appservice.json",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "[concat('https://raw.githubusercontent.com/YourUsername/YourRepo/main/appservice.parameters.', parameters('environment'), '.json')]",
          "contentVersion": "1.0.0.0"
        }
      },
      "dependsOn": ["networkDeployment"]
    }
  ],
  "outputs": {
    "appServiceUrl": {
      "type": "string",
      "value": "[reference('appServiceDeployment').outputs.appServiceUrl.value]"
    },
    "sqlServerFqdn": {
      "type": "string",
      "value": "[reference('databaseDeployment').outputs.sqlServerFqdn.value]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[reference('storageDeployment').outputs.storageAccountName.value]"
    }
  }
}